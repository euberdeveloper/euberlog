{
  "name": "euberlog",
  "version": "1.0.16",
  "description": "A beautiful nodejs logger",
  "main": "bundled/index.js",
  "types": "bundled/index.d.ts",
  "files": [
    "package.json",
    "bundled",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "shx rm -rf dist bundled",
    "pretranspile": "npm run clean",
    "prebundle": "npm run clean",
    "transpile": "tsc -p source",
    "bundle": "webpack",
    "lint": "eslint source/**/*.ts --format codeframe",
    "lint:fix": "eslint --fix source/**/*.ts --format codeframe",
    "commit": "git-cz",
    "commit:sign": "git-cz -S",
    "prepublishOnly": "npm run bundle"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/euberdeveloper/euberlog.git"
  },
  "keywords": [
    "log",
    "logger",
    "color"
  ],
  "author": "Eugenio Vinicio Berretta <euberdeveloper@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/euberdeveloper/euberlog/issues"
  },
  "homepage": "https://github.com/euberdeveloper/euberlog#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@euberdeveloper/eslint-config-typescript": "^4.5.0",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.14.14",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "dts-bundle": "^0.7.3",
    "dts-bundle-webpack": "^1.0.2",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "prettier": "^2.2.1",
    "shx": "^0.3.3",
    "terser-webpack-plugin": "^5.0.3",
    "ts-loader": "^8.0.12",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.1.3",
    "typescript-transform-paths": "^2.1.0",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0",
    "webpack-node-externals": "^2.5.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
