{
  "name": "euberlog",
  "version": "1.0.8",
  "description": "A beautiful nodejs logger",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "package.json",
    "package-lock.json",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "transpile": "npm run clean && tsc -p source",
    "bundle": "npm run clean && webpack",
    "lint": "eslint source/**/*.ts --format codeframe",
    "lint:fix": "eslint --fix source/**/*.ts --format codeframe",
    "commit": "git-cz",
    "commit:sign": "git-cz -S"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/euberdeveloper/euberlog.git"
  },
  "keywords": [
    "log",
    "logger",
    "color"
  ],
  "author": "Eugenio Vinicio Berretta <euberdeveloper@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/euberdeveloper/euberlog/issues"
  },
  "homepage": "https://github.com/euberdeveloper/euberlog#readme",
  "dependencies": {},
  "devDependencies": {
    "@euberdeveloper/eslint-config-typescript": "^4.5.0",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.14.14",
    "chalk": "^4.1.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "module-alias": "^2.2.2",
    "prettier": "^2.2.1",
    "shx": "^0.3.3",
    "ts-loader": "^8.0.12",
    "typescript": "^4.1.3",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
